<div class="container">
<h2>Cadastrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <br />
    <%= f.text_field :name, autofocus: true, class:"form-control",placeholder:"Nome" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: true,class:"form-control",placeholder:"Email", autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password,class:"form-control",placeholder:"Senha (mÃ­nimo 6 caracteres)", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password_confirmation,class:"form-control",placeholder:"ConfirmaÃ§Ã£o de Senha",  autocomplete: "new-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Cadastrar" , class:"btn btn-secondary"%>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>