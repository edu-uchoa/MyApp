<div class="container">
<h2>Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <br />
    <%= f.email_field :email, autofocus: true, class:"form-control",placeholder:"Email", autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <br />
    <%= f.password_field :password, class:"form-control",placeholder:"Senha", autocomplete: "current-password" %>
  </div>
<br>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Entrar", class:"btn btn-secondary" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links"  %>
</div>
