<div class="container">
 <p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts" style="width: 22rem;">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Mostrar Post", post, class:"link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover" %>
    </p>
  <% end %>
</div>

<%= link_to "Novo post", new_post_path, class:"btn btn-secondary" %> 
</div>

